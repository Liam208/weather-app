<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Weather App</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Inter Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        html,
        body {
            height: 100%;
            /* Ensure html and body take full height */
            margin: 0;
            padding: 0;
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            /* Light background to match Bootstrap default */
            overflow: hidden;
            /* Hide overflow to prevent scrollbar */
        }

        .navbar {
            border-bottom-left-radius: 0.5rem;
            border-bottom-right-radius: 0.5rem;
        }

        .main-content-area {
            flex-grow: 1;
            /* Allow this div to take up remaining vertical space */
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1rem;
            /* Add some padding to prevent card from touching edges */
            box-sizing: border-box;
            /* Include padding in element's total width and height */
        }

        .card {
            border-radius: 1rem;
            /* Rounded corners for the card */
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            /* Subtle shadow */
            max-height: 90vh;
            /* Limit card height to prevent overflow on smaller screens */
            overflow-y: auto;
            /* Allow internal scrolling if card content is too long */
        }

        .form-control {
            border-radius: 0.5rem;
            /* Rounded corners for input fields */
        }

        .btn {
            border-radius: 0.5rem;
            /* Rounded corners for buttons */
        }
    </style>
</head>

<body class="d-flex flex-column"> <!-- Use flex-column on body to stack navbar and content -->

    <nav class="navbar bg-primary">
        <div class="container-fluid">
            <span class="navbar-brand text-light fw-bold h5">Weather App</span>
            <form class="d-flex">
                <a href="/login" class="btn btn-warning me-3">Login</a>
                <a href="/signup" class="btn btn-danger">Signup</a>
            </form>
        </div>
    </nav>

    <div class="main-content-area">
        <div class="card border border-2 border-primary align-items-center" style="width: 20rem;">
            <div class="card-body p-4 w-100">
                <h3 class="card-title text-center mb-4 text-primary fw-bold">Login</h3>
                <form id="userInfo">
                    <div class="mb-3">
                        <label for="emailInput" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="emailInput" placeholder="name@example.com" name="Email" required>
                    </div>
                    <div class="mb-4">
                        <label for="passwordInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="passwordInput" placeholder="********" name="password" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                    <p class="text-center mt-3">
                        Don't have an account? <a href="/signup" class="text-primary fw-bold">Sign Up</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const form = document.querySelector("#userInfo")

        form.addEventListener("submit", (e)=> {
            e.preventDefault()
            const email = form.email.value;
            const password = form.password.value;
        })
    </script>
</body>

</html>